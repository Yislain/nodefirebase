<%- include("../templates/encabezado") %>
<%- include("../templates/menu") %>
<div class="container mt-5">
    <form action="/editarUsuario" method="post">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%- user.id %>">
                
                <div class="form-group">
                    <label for="nombre">Nombre:</label>
                    <input class="form-control mb-3" value="<%- user.nombre %>" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                </div>
                
                <div class="form-group">
                    <label for="usuario">Usuario:</label>
                    <input class="form-control mb-3" value="<%- user.usuario %>" type="text" name="usuario" id="usuario" placeholder="Usuario">
                </div>
                
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input class="form-control" value="<%- user.password %>" type="text" name="password" id="password" placeholder="Password">
                </div>
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-warning">Modificar Usuario</button>
            </div>
        </div>
    </form>
</div>
